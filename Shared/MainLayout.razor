@inherits LayoutComponentBase
@inject NavigationManager Nav
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>MaestroNotes</PageTitle>

<div class="page">
    <main>
        <div class="top-row auth px-4 d-flex justify-content-between align-items-center bg-light border-bottom mb-3 py-2">
            <h3 class="mb-0">Maestro Notes</h3>
            <div>
                <AuthorizeView>
                    <Authorized>
                        <span class="me-3 text-primary">Hallo @context.User.Identity?.Name</span>
                        <a href="/auth/logout" class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-sign-out-alt me-1"></i> Logout
                        </a>
                    </Authorized>
                    <NotAuthorized>
                        <a href="/login" class="btn btn-sm btn-primary">
                            <i class="fas fa-sign-in-alt me-1"></i> Login
                        </a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
